<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.PlotFragment">


    <com.jjoe64.graphview.GraphView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/graph1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/btnMarkCsv" />

    <ImageButton
        android:id="@+id/imgbutton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/ic_bluetooth_no_connection"
        android:onClick="showDevice (StartFragment)"
        android:adjustViewBounds="false"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/btnCreateMarkInCsv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:onClick="createMarkInCsv"
        android:id="@+id/btnMarkCsv"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imgbutton"
        android:layout_toStartOf="@+id/imgbutton" />
</RelativeLayout>