<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="activity.ExperimentFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:text="Current Participant:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currParticipant" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:id="@+id/participantName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <Button
                android:text="@string/btnNewCSVFile"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="createNewCsvFile"
                android:id="@+id/btnCreateNewCSV"
                android:layout_weight="0.5" />

            <Button
                android:text="Connect Bluetooth"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:id="@+id/connectExperiment"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:text="@string/btnStartExperiment"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="csvMarkStartExperiment"
                android:id="@+id/btnStartExperiment"
                android:layout_weight="0.5" />

            <Button
                android:text="@string/btnStopExperiment"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="csvMarkStopExperiment"
                android:id="@+id/btnStopExperiment"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:text="@string/btnStartRotation"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="csvMarkStartRotation"
                android:id="@+id/btnStartRotation"
                android:layout_weight="0.5" />

            <Button
                android:text="@string/btnStopRotation"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="csvMarkStopRotation"
                android:id="@+id/btnStopRotation"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:text="@string/btnStartPush"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="csvMarkStartPush"
                android:id="@+id/btnStartPush"
                android:layout_weight="0.5" />

            <Button
                android:text="@string/btnStopPush"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="csvMarkStopPush"
                android:id="@+id/btnStopPush"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:text="@string/btnStartLiftUp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="csvMarkStartLiftUp"
                android:id="@+id/btnStartLiftUp"
                android:layout_weight="0.5" />

            <Button
                android:text="@string/btnStopLiftUp"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:onClick="csvMarkStopLiftUp"
                android:id="@+id/btnStopLiftUp"
                android:layout_weight="0.5" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Bytes Available:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />
    </LinearLayout>

</RelativeLayout>

</ScrollView>